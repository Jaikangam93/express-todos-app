<% include ../views/partials/header %>
  <form method="post" action="/todo/edit/<%= todo._id %> ">
    <div>
        <label> Todo Name </label>
        <input type="text" name="text" placeholder="Add Todo" value=" <%= todo.text %> ">
    </div>
    <div>
        <label> Todo Body  </label>
        <textarea name="body" rows="5" cols="80" placeholder="Add Body "> <%= todo.body %> </textarea>
    </div>
    <button type="submit" name="button"> Submit</button> <a href='/' > Cancel </a> 
  </form>
<% include ../views/partials/footer %>
