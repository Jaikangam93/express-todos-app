<% include ../views/partials/header %>
  <div class="row">
    <div class="col-md-6">
      <form method="post" action="/todo/edit/<%= todo._id %> ">
        <div class="form-group">
            <label> Todo Name </label>
            <input  class="form-control" type="text" name="text" placeholder="Add Todo" value=" <%= todo.text %> ">
        </div>
        <div class="form-group">
            <label> Todo Body  </label>
            <textarea class="form-control" name="body" rows="5" cols="80" placeholder="Add Body "> <%= todo.body %> </textarea>
        </div>
        <button class="btn btn-success" type="submit" name="button"> Submit</button> <a href='/' class="btn btn-warning"> Cancel </a>
      </form>
    </div>
  </div>

<% include ../views/partials/footer %>
